GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# File Upload
MAX_FILE_SIZE="52428800" # 50MB in bytes
UPLOAD_DIR="./public/uploads"

# Application Settings
NODE_ENV="development"
